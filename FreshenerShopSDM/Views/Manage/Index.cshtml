@model FreshenerShopSDM.Models.IndexViewModel

<h2>Your account settings</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink(" Change your password", "ChangePassword", null, null, new { @class = "btn btn-info justify-content-center fa fa-key" })
            }
            else
            {
                @Html.ActionLink(" Create", "SetPassword", null, null, new { @class = "btn btn-info justify-content-center fa fa-key" })
            }
        </dd></br>
        <dt>External Logins: @Model.Logins.Count </dt>
        <dd>
            @Html.ActionLink(" Manage", "ManageLogins", null, null, new { @class = "btn btn-info justify-content-center fa fa-list" })
        </dd>
    </dl>
</div>
