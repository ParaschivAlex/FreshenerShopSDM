@if (TempData.ContainsKey("message"))
{
    <h1 class="text-center"> @ViewBag.message&nbsp;</h1>
    <br />
}

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li>@Html.ActionLink("Price Ascending", "Index", new { sortOrder = "1", currentFilter = ViewBag.CurrentFilter }, new { @class = "text-center", @style = "color:black" })</li>
                    <li>@Html.ActionLink("Price Descending", "Index", new { sortOrder = "2", currentFilter = ViewBag.CurrentFilter })</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>@Html.ActionLink("Rating Ascending", "Index", new { sortOrder = "1", currentFilter = ViewBag.CurrentFilter })</li>
                    <li>@Html.ActionLink("Rating Descending", "Index", new { sortOrder = "4", currentFilter = ViewBag.CurrentFilter })</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>@Html.ActionLink("Oldest added", "Index", new { sortOrder = "5", currentFilter = ViewBag.CurrentFilter })</li>
                    <li>@Html.ActionLink("Newest added", "Index", new { sortOrder = "6", currentFilter = ViewBag.CurrentFilter })</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4 text-right">
            @using (Html.BeginForm("Index", "Fresheners", FormMethod.Get))
            {
               @Html.TextBox("search", ViewBag.CurrentFilter as string)
                <input type="submit" value="search" class="btn btn-success pull-right"/>
            }
        </div>
    </div>

    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xl-3">

        @foreach (FreshenerShopSDM.Models.Freshener freshener in ViewBag.Fresheners)
        {
            <div class="col mb-4">
                <div class="card h-100 border-secondary mb-3">
                    <a href="/Fresheners/Show/@freshener.FreshenerId">
                        <img class="card-img-top" src="@freshener.FreshenerImage" alt="freshener image" style="height:200px;" />
                    </a>
                    <div class="card-body">
                        <a href="/Fresheners/Show/@freshener.FreshenerId" style="color:black">
                            <h3 class="card-title text-center">@freshener.FreshenerName</h3>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            Rating:&ensp;
                            @if (!float.IsNaN(freshener.FreshenerRating))
                            {
                                <p>@freshener.FreshenerRating</p>
                                var j = 0;
                                for (var i = 1; i <= freshener.FreshenerRating; i++)
                                {
                                    <i class="fa fa-star" style="color:gold;"></i>
                                    j++;
                                }
                                if (freshener.FreshenerRating - j != 0)
                                {
                                    <i class="fa fa-star-half-full" style="color:gold;"></i>
                                }
                                for (var i = 5 - freshener.FreshenerRating; i >= 1; i--)
                                {
                                    <i class="fa fa-star-o" style="color:gold;"></i>
                                }
                            }
                            else
                            {
                                <a href="/Fresheners/Show/@freshener.FreshenerId" style="color:black">No reviews yet!</a>
                            }
                        </li>
                        <li class="list-group-item text-center">
                            <h4>@freshener.FreshenerPrice Lei</h4>
                        </li>
                        @if (freshener.FreshenerAvailability == false)
                        {
                            <li class="list-group-item text-center" style="padding-top:1.7em;">
                                <form action="javascript:void(0);">
                                    <button class="btn btn-outline-danger">
                                        <i class="fa">Freshener unavailable!</i>
                                    </button>
                                </form>
                            </li>
                        }

                        @if (freshener.FreshenerStock > 0 && freshener.FreshenerAvailability == true)
                        {
                            <li class="list-group-item text-center" style="padding-top:1.7em;">
                                <form method="post" action="/ItemCarts/New">
                                    <input type="hidden" name="FreshenerId" value="@freshener.FreshenerId" />
                                    <input type="hidden" name="ItemCartQuantity" value="1" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-shopping-bag">&ensp;Add to Basket</i>
                                    </button>
                                </form>
                            </li>
                        }
                        @if (freshener.FreshenerStock <= 0 && freshener.FreshenerAvailability == true)
                        {
                            <li class="list-group-item text-center" style="padding-top:1.7em;">
                                <form action="javascript:void(0);">
                                    <button class="btn btn-outline-danger">
                                        <i class="fa">Out of stock!</i>
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card-footer text-center">
                            <small class="text-muted">Added on: @freshener.FreshenerModifyDate</small>
                        </div>
                    }
                </div>
            </div>
        }&nbsp;
    </div>
    <br />

    &nbsp;

</div>

