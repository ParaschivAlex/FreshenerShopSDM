<div class="container-fluid">
    <h2 class="text-primary">Cos de cumparaturi</h2>
    <a class="btn btn-info" href="/Fresheners/Index"><i class="fa fa-arrow-left"></i>  Inapoi la lista de produse</a>
    <br /><br />

    <div class="row">
        <div class="col-md-8">
            @foreach (var ic in ViewBag.ItemCarts)
            {
                <div class="panel panel-default">
                    <div class="panel-heading" style="background-color:white;">
                        <h4 class="text-primary pull-left">@ic.Freshener.FreshenerName</h4>
                        <form method="post" action="/ItemCarts/Delete/@ic.ItemCartId">
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="btn btn-danger pull-right" type="submit"><i class="fa fa-trash"></i>&ensp;Remove</button>
                        </form>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3">
                                <img class="img-responsive" src="@ic.Freshener.FreshenerImage" alt="poza produsului" />
                            </div>
                            <div class="col-md-5">
                                <p style="height:120px; overflow:hidden;">@ic.Freshener.FreshenerDescription</p>
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-3">
                                        <form method="post" action="/ItemCarts/DecreaseItem/@ic.ItemCartId">
                                            @Html.HttpMethodOverride(HttpVerbs.Put)
                                            <button class="btn btn-info" type="submit"><i class="fa fa-minus"></i></button>
                                        </form>
                                    </div>
                                    <div class="col-md-2">
                                        <h4><b>@ic.ItemCartQuantity</b></h4>
                                    </div>
                                    <div class="col-md-3">
                                        <form method="post" action="/ItemCarts/IncrementItem/@ic.ItemCartId">
                                            @Html.HttpMethodOverride(HttpVerbs.Put)
                                            <button class="btn btn-info" type="submit"><i class="fa fa-plus"></i></button>
                                        </form>
                                    </div>
                                    <div class="col-md-2"></div>
                                </div>
                                <h4 class="text-center">

                                    Price:<i> @ic.Freshener.FreshenerPrice Lei</i>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="text-center text-success">Salut, @ViewBag.currentUser.UserName</h4>
                </div>
                <div class="panel-body">

                    <img class="img-responsive" src="https://cdn.iconscout.com/icon/free/png-512/avatar-372-456324.png" style="height:200px; margin:auto;" alt="poza_utilizator" />
                    <hr />



                    <div class="text-center">
                        <h4>Total: @ViewBag.TotalSum Lei</h4>
                        <br />
                        <form method="post" action="/Orders/New">
                            <input type="hidden" name="Total" value="@ViewBag.TotalSum" />
                            <input type="hidden" name="Email" value="@ViewBag.currentUser.Email" />
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-shopping-bag">&ensp;Continue</i>
                            </button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>