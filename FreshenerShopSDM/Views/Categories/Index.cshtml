@if (TempData.ContainsKey("message"))
{
    <h1 class="text-center"> @ViewBag.message&nbsp;</h1>
    <br />
}
<div class="row text-center">
    <div class="col-md-12">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-success justify-content-center" href="/Categories/New"><i class="fa fa-plus">&ensp;Add Category</i></a>
        }
        <a class="btn btn-info justify-content-center" href="/Fresheners/Index"><i class="fa fa-list">&ensp;All Fresheners</i></a>
    </div>
</div>
</br>
<div class="row row-cols-1 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xl-4 g-4">
    @if (User.IsInRole("Admin"))
    {
        foreach (var category in ViewBag.Categories)
        {
            <div class="col mb-4">
                <div class="card h-100 border-secondary mb-3">
                    <a href="/Categories/Show/@category.CategoryId">
                        <img class="card-img-top" src="@category.CategoryImage" alt="category image" style="height:150px;" />
                    </a>
                    <div class="card-body">
                        <a href="/Categories/Show/@category.CategoryId" style="color:black">
                            <h4 class="card-title text-center">@category.CategoryName</h4>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            <p class="card-text">@category.CategoryDescription</p>
                        </li>
                        <li class="list-group-item text-center">
                            <a class="btn btn-warning" href="/Categories/Edit/@category.CategoryId"><i class="fa fa-edit">&ensp;Edit Category</i></a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        foreach (var category in ViewBag.Categories)
        {
            <div class="col mb-4">
                <div class="card h-100 border-secondary mb-3">
                    <a href="/Categories/Show/@category.CategoryId">
                        <img class="card-img-top" src="@category.CategoryImage" alt="category image" style="height:150px;" />
                    </a>
                    <div class="card-body">
                        <a href="/Categories/Show/@category.CategoryId" style="color:black">
                            <h4 class="card-title text-center">@category.CategoryName</h4>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            <p class="card-text">@category.CategoryDescription</p>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
</div>


